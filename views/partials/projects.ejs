<%
/**
 * @typedef {object} Project
 * @property {string} name Project name
 * @property {string} url Project name url
 * @property {string} summary Project summary
 *
 * [Section] Projects
 * @param {array.<Projects>} projects
 */
%>

<% if (projects && Array.isArray([projects]) && projects.length > 0) { %>
  <section id="work" class="row">
    <aside class="col-sm-2">
      <h3>Projects</h3>
    </aside>
    <div class="col-sm-10">
      <div class="row">
        <% projects.forEach((p) => { %>
          <div class="col-sm-12">
            <h4 class="strike-through">
              <span><%= p.name %></span>
            </h4>
            <div class="website pull-left">
              <a target="_blank" href="<%= p.url %>"><%= p.url %></a>
            </div>
            <br>
            <div class="summary">
              <p><%= p.summary %></p>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </section>
<% } %>
